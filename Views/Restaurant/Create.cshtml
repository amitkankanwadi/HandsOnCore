@model HandsOnCore.Models.Restaurant

@{
    ViewData["Title"] = "Add Restaurant";
}

<h1>Add Restaurant</h1>

<hr />
<form asp-controller="Restaurant" asp-action="Create" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-4">
            <label asp-for="Name" class="control-label required"></label>
            <input asp-for="Name" class="form-control" id="restaurantName" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Area" class="control-label required"></label>
            <input asp-for="Area" class="form-control" id="area" />
            <span asp-validation-for="Area" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="City" class="control-label required"></label>
            <input asp-for="City" class="form-control" id="city" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-4">
            <label asp-for="PinCode" class="control-label required"></label>
            <input type="number" asp-for="PinCode" class="form-control" id="pinCode" />
            <span asp-validation-for="PinCode" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="PhoneNumber" class="control-label required"></label>
            <input type="number" asp-for="PhoneNumber" class="form-control" id="phoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="ContactPersonName" class="control-label"></label>
            <input asp-for="ContactPersonName" class="form-control" id="contactName" />
            <span asp-validation-for="ContactPersonName" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-4">
            <label asp-for="MinDeliveryTime" class="control-label"></label>
            <input asp-for="MinDeliveryTime" class="form-control" id="deliveryTime" placeholder="HH:mm" />
            <span asp-validation-for="MinDeliveryTime" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="CostForTwo" class="control-label"></label>
            <input asp-for="CostForTwo" class="form-control" type="number" id="cost42" />
            <span asp-validation-for="CostForTwo" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Image" class="control-label required"></label>
            <input type="file" asp-for="Image" id="image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        @*<div class="form-group col-4">
                <label asp-for="PhotoUrl" class="control-label required"></label>
                <input asp-for="PhotoUrl" class="form-control" id="photourl" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>*@
    </div>

    <hr />
    <h2>Menu</h2>
    <hr />
    <div class="row" id="menuDiv">
        <div class="form-group col-2">
            <label asp-for="Menus.First().FoodName" class="control-label"></label>
        </div>
        <div class="form-group col-2">
            <label asp-for="Menus.First().Description" class="control-label"></label>
        </div>
        <div class="form-group col-3">
            <label asp-for="Menus.First().Image" class="control-label"></label>
        </div>
        <div class="form-group col-2">
            <label asp-for="Menus.First().Price" class="control-label"></label>
        </div>
        <div class="form-group col-2">
            <label asp-for="Menus.First().IsVeg" class="control-label"></label><br />
        </div>
    </div>
    @for (int i = 0; i < 2; i++)
            {
    <div class="row">
        <div class="form-group col-2">
            <input asp-for="Menus[i].FoodName" class="form-control" id="foodname" />
        </div>
        <div class="form-group col-2">
            <input asp-for="Menus[i].Description" class="form-control" id="description" />
        </div>
        <div class="form-group col-3">
            <input type="file" asp-for="Menus[i].Image" id="image" />
        </div>
        <div class="form-group col-2">
            <input asp-for="Menus[i].Price" type="number" class="form-control" id="price" />
        </div>
        <div class="form-group col-2">
            <input asp-for="Menus[i].IsVeg" id="isVeg" />
        </div>
    </div>
            }

    <div class="form-group" id="btngrp">
        <input type="reset" id="clearBtn" value="Clear" class="btn btn-warning search" />
        <input type="submit" id="submitBtn" onclick="sendData()" value="Create" class="btn btn-warning search" />
        <input type="button" onclick="addData()" id="addBtn" class="btn btn-warning search addBtn" value="Add Menu" />
        <input type="button" onclick="removeData()" id="removeBtn" class="btn btn-warning search" value="Remove Menu" />
    </div>

</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script type="text/javascript" src="~/js/site.js"></script>